{
  "name": "suprachat-backend",
  "version": "1.0.0",
  "description": "A Fastify server for Suprachat's IRCd",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production tsx -r dotenv/config src/server.ts",
    "dev": "NODE_ENV=development tsx watch -r dotenv/config src/server.ts",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky install",
    "lint": "eslint --fix \"src/**/*.ts\"",
    "lint:check": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "dagger": "tsx ./ci/index.ts"
  },
  "author": "ThyDevourer <pedro@ivanpartida.xyz>",
  "license": "GPL-3.0",
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@dagger.io/dagger": "^0.6.2",
    "@faker-js/faker": "^7.6.0",
    "@kubernetes/client-node": "^0.18.1",
    "@types/bcrypt": "^5.0.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitest/coverage-c8": "^0.27.3",
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "mongodb-memory-server": "^8.12.2",
    "pino-pretty": "^9.4.0",
    "prettier": "^2.8.7",
    "simple-git": "^3.19.0",
    "typescript": "^4.9.5",
    "vite": "^4.2.1",
    "vite-tsconfig-paths": "^4.0.8",
    "vitest": "^0.27.3",
    "yaml": "^2.2.1"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.309.0",
    "@fastify/cors": "^8.2.1",
    "@fastify/jwt": "^6.7.1",
    "@fastify/multipart": "^7.6.0",
    "@fastify/type-provider-typebox": "^2.4.0",
    "@sinclair/typebox": "^0.25.24",
    "bcrypt": "^5.1.0",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "fastify": "^4.15.0",
    "irctokens": "^2.0.0",
    "mongodb": "^5.6.0",
    "nanoid": "^4.0.2",
    "papr": "^13.1.0",
    "remeda": "^1.12.0",
    "sharp": "^0.32.1",
    "tsx": "^3.12.6",
    "undici": "^5.22.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
